class Person {
    init (name, age, height, weight) {
        this.name = name;
        this.age = age;
        this.height = height;
        this.weight = weight;
        this.ratio = weight / height;
    }

    presentAt(conference){
        print "Hi, my name is " + this.name + ", we are at " + conference;
        print this.ratio;
    }
}

var x = Person("Juan", 27, 1.80, 75.3);
var y = Person("Pedro", 32, 1.77, 82.3);

x.presentAt("PyConf");
y.presentAt("JavaConf");